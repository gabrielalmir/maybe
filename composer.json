{
    "name": "gabrielalmir/maybe",
    "description": "Functional primitives for PHP: Option and Result types inspired by Rust",
    "type": "library",
    "version": "0.1.1",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Maybe\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Maybe\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Gabriel Almir"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "pestphp/pest": "^1.23"
    },
    "scripts": {
        "lint": "phpstan analyse --memory-limit=1G --no-progress --debug",
        "test": "pest --configuration phpunit.xml.dist",
        "qa": [
            "@guard",
            "@lint",
            "@test"
        ]
    },
    "keywords": [
        "php",
        "functional",
        "option",
        "result",
        "maybe",
        "monad"
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
